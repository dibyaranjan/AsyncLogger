<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<File name="fileAppender" fileName="asynclogger.log"
			immediateFlush="true" append="true">
			<PatternLayout
				pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%-5level] [%logger{36}] %msg%n" />
		</File>

		<File name="clientAppender" fileName="app.log"
			immediateFlush="true" append="true">
			<PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] %msg%n" />
		</File>
	</Appenders>
	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="fileAppender" />
		</Root>

		<Logger name="applicationLogger" level="DEBUG" additivity="false">
			<AppenderRef ref="fileAppender" />
		</Logger>
		
		<Logger name="clientLogger" level="DEBUG" additivity="false">
			<AppenderRef ref="clientAppender" />
		</Logger>

	</Loggers>
</Configuration>